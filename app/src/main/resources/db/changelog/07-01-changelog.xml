<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1654550558851-1" author="ivan.vorobev">
        <createTable tableName="t_document">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="t_document_pkey"/>
            </column>
            <column name="name" type="TEXT"/>
            <column name="file_path" type="TEXT"/>
            <column name="type" type="TEXT"/>
            <column name="teacher_id" type="BIGINT"/>
            <column name="upload_time" type="timestamp"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="t_document" baseColumnNames="teacher_id" referencedTableName="t_teacher"
                                 referencedColumnNames="id" constraintName="fk_teacher_id_t_teacher_id"/>

    </changeSet>
</databaseChangeLog>