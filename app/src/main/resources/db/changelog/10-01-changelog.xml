<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1654882784628-1" author="ivan.vorobev">
        <dropAllForeignKeyConstraints baseTableName="t_document"/>
        <dropColumn tableName="t_document" columnName="type"/>
        <dropColumn tableName="t_document" columnName="teacher_id"/>

        <addColumn tableName="t_document">
            <column name="label_id"
                    type="BIGINT"/>
        </addColumn>

        <createTable tableName="t_label">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="t_label_pkey"/>
            </column>
            <column name="teacher_id" type="BIGINT"/>
            <column name="name" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="t_label" baseColumnNames="teacher_id" referencedTableName="t_teacher"
                                 referencedColumnNames="id" constraintName="fk_t_label_t_teacher"/>

        <addForeignKeyConstraint baseTableName="t_document" baseColumnNames="label_id" referencedTableName="t_label"
                                 referencedColumnNames="id" constraintName="fk_t_document_t_label"/>

    </changeSet>
</databaseChangeLog>